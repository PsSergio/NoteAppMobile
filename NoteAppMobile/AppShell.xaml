<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="NoteAppMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NoteAppMobile"
    Shell.FlyoutBehavior="Disabled"
    Title="NoteAppMobile"
    
    >

    <TabBar>

     
        <ShellContent
            
            Title="Home"
            Icon="home_icon"
            ContentTemplate="{DataTemplate local:MainPage}"
            Route="MainPage" 
            />
        
        <Tab
            
            Title="Note"
            Icon="pencil_icon">
            
            <ShellContent
            Title="Notes"
            ContentTemplate="{DataTemplate local:NotesVariationPage}"
            Route="NotesVariationPage"
            />

            <ShellContent
            Title="Files"
            ContentTemplate="{DataTemplate local:FilesVariationPage}"
            Route="FilesVariationPage" />

        </Tab>
        

        <ShellContent
            Title="Credits"
            Icon="about_icon"
            ContentTemplate="{DataTemplate local:AboutPage}"
            Route="AboutPage" />

    </TabBar>
    

</Shell>

