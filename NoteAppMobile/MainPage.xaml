<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="NoteAppMobile.MainPage"
             Shell.FlyoutBehavior="Disabled"
             Shell.NavBarIsVisible="False">

    <ScrollView>
        <VerticalStackLayout>

            <Image
                Source="logo_with_letter"
                HorizontalOptions="Center"
                Margin="0, 140, 0, 50"
                />

            
            <Label
                FontSize="20"
                FontFamily="CocogooseBold"
                Text="In NoteFast, you can make notes easily and quickly. Here you can choose between saving to a file or just writing in the app."
                HorizontalTextAlignment="Center"
                WidthRequest="300"
                Margin="0, 20, 0, 100"
                
            />

            <Button
                Text="Make Notes!"
                HorizontalOptions="Center"
                TextColor="Black"
                FontFamily="CocogooseBold"
                Padding="40, 20"
                CornerRadius="40"
                FontSize="20"
            />
                
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>

